<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.e_code_detail.E_Code_Detail_Fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/e_code_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_toolbar_e_code_detail_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/vector_gr" />

        <ImageView
            android:id="@+id/image_toolbar_e_code_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_vector" />

        <TextView
            android:id="@+id/tv_toolbar__detail_e_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="E коды"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/e_code_detail_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E 105"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_halal_e_code_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Халал"
                android:textColor="@color/white"
                android:background="@drawable/bg_halal_tv"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_kumon_e_code_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/tv_halal_e_code_detail"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Кумон"
                android:textColor="@android:color/holo_red_dark"
                android:background="@drawable/bg_kumon_tv"
                android:padding="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_haram_e_code_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/tv_kumon_e_code_detail"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="7dp"
                android:layout_marginRight="10dp"
                android:text="Харам"/>
            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ksdksdbovbedbvuw"
                app:layout_constraintStart_toStartOf="@id/tv_product_name"
                app:layout_constraintTop_toBottomOf="@id/tv_product_name"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_organizmge_taasiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Организмге таасири"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/product_title"
                app:layout_constraintTop_toBottomOf="@id/product_title"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_ziyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_organizmge_taasiri"
                app:layout_constraintTop_toBottomOf="@id/tv_organizmge_taasiri"
                android:textColor="@android:color/holo_red_dark"
                android:text="Зыян"
                android:layout_marginTop="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_ziyan"
                app:layout_constraintTop_toBottomOf="@id/tv_ziyan"
                android:background="@android:color/holo_red_dark"/>
            <TextView
                android:id="@+id/ziyan_title"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_ziyan"
                android:text="dusgvuoosaqqqqqqqqqqqqqqqqqqqqqqqqweruuus"
                app:layout_constraintStart_toStartOf="@id/tv_ziyan"/>
            <TextView
                android:id="@+id/tv_paida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ziyan_title"
                app:layout_constraintStart_toStartOf="@id/ziyan_title"
                android:text="Пайда"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/holo_green_dark"/>
            <View
                android:id="@+id/view_paida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_paida"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_paida"/>
            <TextView
                android:id="@+id/tv_paida_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="snkldsnkldknlkdalkdl"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_paida"
                app:layout_constraintStart_toStartOf="@id/tv_paida"/>

            <TextView
                android:id="@+id/tv_koldonuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Колдонуу"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_paida_title"
                app:layout_constraintStart_toStartOf="@id/tv_paida_title"/>
            <TextView
                android:id="@+id/tv_koldonuu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdgniahnag'ag'ag'ag'disghiehgkdsagu"
                app:layout_constraintTop_toBottomOf="@id/tv_koldonuu"
                app:layout_constraintStart_toStartOf="@id/tv_koldonuu"
                android:layout_marginTop="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>